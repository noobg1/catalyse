{
    "env": {
      "es6": true,
      "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "rules": {
      "comma-dangle": [0, "always-multiline"],
      "import/no-extraneous-dependencies": [0, {"devDependencies": true}],
      "arrow-body-style": 0,
      "space-before-blocks": 2,
      "space-before-function-paren": 2,
      "space-in-parens": 2,
      "space-infix-ops": 2,
      "space-unary-ops": 2,
      "semi-spacing": 2,
      "no-unneeded-ternary": 2,
      "keyword-spacing": 2,
      "no-useless-rename": 2,
      "no-multiple-empty-lines": ["error", { "max": 1 }],
      "max-len": [2, {"code": 120, "ignoreStrings": true, "ignoreComments": true, "ignoreRegExpLiterals": true}]
    }
  }